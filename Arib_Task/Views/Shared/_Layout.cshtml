    <script>
        $(document).ready(function () {
            // دالة لتحميل عدد المنتجات في السلة
            function loadCartCount() {
                $.get("/Cart/GetCartItemCount", function (data) {
                    const $badge = $("#cart-count-placeholder");

                    // حدث الرقم داخل العنصر
                    $badge.html(data);

                    // أضف padding علشان الرقم لو كبر يفضل شكله كويس
                    const count = parseInt($(data).text());
                    if (count > 9) {
                        $badge.css({
                            "min-width": "22px",
                            "padding": "2px 6px"
                        });
                    } else {
                        $badge.css({
                            "min-width": "18px",
                            "padding": "0px 0px"
                        });
                    }

                    // تأثير تحديث أنيميشن ناعم
                    $badge.fadeOut(100).fadeIn(300);
                });
            }

            // استدعاء أول مرة عند تحميل الصفحة
            loadCartCount();

            // تقدر تنادي loadCartCount() بعد إضافة منتج للسلة
            window.loadCartCount = loadCartCount;
        });
    </script>


