@model DashboardViewModel

@{
    ViewData["Title"] = "لوحة التحكم المدير";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">@ViewData["Title"]</h2>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-diagram-3-fill text-success fs-1 mb-3"></i>
                    <h5 class="fw-bold text-secondary">الأقسام</h5>
                   <a asp-area="Manager" asp-controller="Department" asp-action="Index" class="btn btn-outline-success mt-3 w-75">عرض الأقسام</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge-fill text-warning fs-1 mb-3"></i>
                    <h5 class="fw-bold text-secondary">الموظفين</h5>
                  <a asp-area="Manager" asp-controller="Employee" asp-action="AllEmployees" class="btn btn-outline-warning mt-3 w-75">عرض الموظفين</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 text-center">
            <a asp-area="Manager" asp-controller="Department" asp-action="CreateDepartment" class="btn btn-primary btn-lg w-75">
                <i class="bi bi-plus-circle me-2"></i> إضافة قسم جديد
            </a>
        </div>
        <div class="col-md-6 text-center">
            <a asp-area="Manager" asp-controller="Employee" asp-action="CreateEmployee" class="btn btn-success btn-lg w-75">
                <i class="bi bi-person-plus-fill me-2"></i> إضافة موظف جديد
            </a>
        </div>
    </div>
</div>
