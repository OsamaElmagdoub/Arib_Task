@model Arib_Task.Areas.Manager.ViewModels.EmployeeViewModel.AddEmployeeViewModel

@{
    ViewBag.Title = "إضافة موظف جديد";
}

<h2 class="mb-4 text-primary fw-bold">@ViewBag.Title</h2>

<div class="card shadow-sm rounded-4 border-0">
    <div class="card-body">
        <form asp-action="CreateEmployee" method="post"  asp-area="Manager" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-bold">الاسم الأول</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label fw-bold">الاسم الأخير</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Salary" class="form-label fw-bold">الراتب</label>
                <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Salary" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">صورة الموظف</label>
                <input type="file" name="ImageFile" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
            </div>
            


            <div class="form-group mb-3">
                <label asp-for="ManagerName" class="form-label fw-bold">اسم المدير</label>
                <input asp-for="ManagerName" class="form-control" placeholder="اكتب اسم المدير كاملاً" />
                <span asp-validation-for="ManagerName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmentId" class="form-label fw-bold">القسم</label>
                <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-select">
                    <option value="">-- اختر القسم --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">إضافة الموظف</button>
        </form>
    </div>
</div>

<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="successModalLabel">✅ تم بنجاح</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body text-center">
                <p class="fs-5 text-primary">تم إضافة المنتج بنجاح 🎉</p>
            </div>

            <div class="modal-footer justify-content-between bg-light">
                <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">متابعة</button>
                <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-primary">
                    الذهاب لجميع المنتجات
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
        <partial name="_ValidationScriptsPartial" />




}
