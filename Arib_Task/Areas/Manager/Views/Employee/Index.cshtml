@model IEnumerable<Elghonemy_Store.ViewModels.ProductViewModels.ProductListItemViewModel>

@{
    ViewBag.Title = "كل المنتجات للعرض للأدمن";
}

<h2 class="mb-4">@ViewBag.Title</h2>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <a href="@Url.Action("ProductDetails", "Product", new { id = product.Id })" class="text-decoration-none text-dark">

                        @if (product.ImageUrls != null && product.ImageUrls.Any())
                        {
                            <div class="product-image-wrapper">
                                <img src="@product.ImageUrls.First()" alt="Product Image" class="img-fluid single-image" />
                            </div>
                        }
                        else
                        {
                            <div class="product-image-wrapper d-flex align-items-center justify-content-center bg-light" style="height:200px;">
                                <p class="text-muted">لا توجد صور لهذا المنتج.</p>
                            </div>
                        }
                        @*  @if (product.ImageUrls != null && product.ImageUrls.Any())
                        {
                            <div class="image-carousel mb-2">
                                <!-- أول صورة -->
                                <img src="@product.ImageUrls.First()" class="main-image" alt="Product Image" />

                                <!-- الصور الباقية -->
                                @if (product.ImageUrls.Count > 1)
                                {
                                    <div class="extra-images mt-2 d-flex overflow-auto">
                                        @foreach (var imageUrl in product.ImageUrls.Skip(1))
                                        {
                                            <img src="@imageUrl" class="thumb-image me-2" alt="Product Thumbnail" />
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p>لا توجد صور لهذا المنتج.</p>
                        }
 *@
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>

                            <p class="card-text text-success fw-bold">
                                @if (product.DisplayPrice.HasValue)
                                {
                                    @product.DisplayPrice.Value.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("ar-EG"))
                                }
                                else
                                {
                                    <span class="text-muted">السعر غير متاح</span>
                                }
                            </p>

                            <p class="card-text text-muted">القسم: @product.CategoryName</p>
                        </div>
                    </a>

                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                        <div>
                            <a href="@Url.Action("EditProduct", "Product", new { id = product.Id })" class="btn btn-warning btn-sm me-1">تعديل</a>

                            <form asp-controller="Product" asp-action="DeleteProduct" method="post" style="display:inline;">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">حذف</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

<style>
    .main-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    .thumb-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid #ddd;
        transition: transform 0.2s;
    }

        .thumb-image:hover {
            transform: scale(1.05);
        }

    .extra-images {
        gap: 5px;
    }
</style>
